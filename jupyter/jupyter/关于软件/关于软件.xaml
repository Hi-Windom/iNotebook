        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Margin="5"
                Foreground="#ccc"
                Text="694357845@qq.com" />
            <Grid Grid.Row="1" />
            <TextBlock
                Grid.Row="2"
                Margin="1,10,1,1"
                Padding="5"
                HorizontalAlignment="Center"
                Foreground="#ccc"
                Text="liaoshanyi" />
        </Grid>
    </Border>

