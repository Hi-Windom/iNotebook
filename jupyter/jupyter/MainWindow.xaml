<Window x:Class="jupyter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:jupyter"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="winNotebook 1.0 by Hi-Windom"
Width="900"
Height="650">
    <!--<Grid>

    </Grid>-->
    <materialDesign:DialogHost>
        <Grid>
            <Grid.Resources>
                <!--<local:ShowMessageCommand x:Key="MessageCommand" />-->
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="58" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.2*" />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border Background="red" />
            <Border Grid.Row="1" Background="green" />
            <Border
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Background="Yellow" />
            <Viewbox
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="3">
                <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
                    <ScrollViewer.Content>
                        <UniformGrid>
                            <Button
                            x:Name="logout"
                            Width="Auto"
                            Margin="20"
                            Click="logout_Click"
                            Content="注销登录"
                            Style="{StaticResource MaterialDesignFlatDarkBgButton}" />
                            <Button
                            Width="Auto"
                            Margin="{Binding ElementName=logout, Path=Margin}"
                            Click="项目管理_Click"
                            Content="项目管理"
                            Style="{StaticResource MaterialDesignFlatDarkBgButton}" />
                            <Button
                            Width="Auto"
                            Margin="{Binding ElementName=logout, Path=Margin}"
                                Click="智能任务_Click"
                            Content="智能任务"
                            IsEnabled="False"
                            Style="{StaticResource MaterialDesignFlatDarkBgButton}" />
                            <Button
                            Width="Auto"
                            Margin="{Binding ElementName=logout, Path=Margin}"
                            Content="更多"
                            IsEnabled="False"
                            Style="{StaticResource MaterialDesignFlatDarkBgButton}" />
                            <Button
                            Width="Auto"
                            Margin="{Binding ElementName=logout, Path=Margin}"
                            Click="控制中心_Click"
                            Content="控制中心"
                            Style="{StaticResource MaterialDesignFlatDarkBgButton}" />
                            <Button
                            Width="Auto"
                            Margin="{Binding ElementName=logout, Path=Margin}"
                            Click="关于软件_Click"
                            Content="关于软件"
                            Style="{StaticResource MaterialDesignFlatDarkBgButton}" />
                        </UniformGrid>
                    </ScrollViewer.Content>
                </ScrollViewer>
            </Viewbox>
            <DockPanel>
                <StackPanel DockPanel.Dock="Bottom">
                    <TextBlock
                    x:Name="连接的实例"
                    Width="200"
                    Height="30"
                    Text="" />
                </StackPanel>
            </DockPanel>
        </Grid>
    </materialDesign:DialogHost>
</Window>
